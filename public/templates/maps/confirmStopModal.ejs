<div id="confirmStopModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Stop Activity</h4>
      </div>
	  
      <div class="modal-body">
		<h4> Are you sure you want stop the activity?</h4>
      </div>
      <div class="modal-footer">
        <button id="confirmStopButton" type="submit" class="btn btn-primary" nohref onclick="stopActivity();return;">Stop</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
	
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
