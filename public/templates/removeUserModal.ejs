<div id="removeUserModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Remove User</h4>
      </div>
	  
      <div class="modal-body">
		<h2> Are you sure you want to remove user <%= username %> ?</h2>
      </div>
      <div class="modal-footer">
        <button id="removeUserButton" type="button" class="btn btn-primary" nohref onclick="removeUser('<%= username %>');">Remove User</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
	
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
