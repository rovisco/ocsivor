<% include header %>
<% include changePasswordModal %>
<% include messageModal %>

<div class="container">
<h1> User Profile</h1>
<form class="form-horizontal" action="/changeUser" role="form" id="editUserForm">
<fieldset id="userProfileForm" disabled>
 <div class="form-group">
	<label class="col-sm-2 control-label">Username:</label>
	<div class="col-sm-10">
	  <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>">
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Mail:</label>
	<div class="col-sm-10">
	  <input type="text" id="email" name="email" class="form-control" value="<%= user.email %>">
	</div>
</div>
 </fieldset>
 <p>&nbsp</p>
 <div class="form-group">
	<label class="col-sm-2 control-label">&nbsp</label>
	<div class="col-sm-10" id="NoEditButtons">
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#changePasswordModal">Change Password</button>
		<button type="button" class="btn btn-primary" nohref onclick="editUserProfile();return false;" >Edit</button>
		<button type="button" class="btn btn-primary" nohref onclick="confirmCancelUser();return false;" >Delete Account</button>
	</div>
	<div class="col-sm-10" id="EditButtons">
		<button id="EditUserSaveButton" type="submit" class="btn btn-primary" >Save</button>
		<button type="button" class="btn btn-default" nohref onclick="cancelEditUserProfile();return false;" >Don't Save</button>
	</div>
</div>

</form>
</div>
<div id="modal-template"></div>
<% include footer %>
